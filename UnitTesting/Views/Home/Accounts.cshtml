@model IEnumerable<BankSystem.Models.Account>

@{
    ViewBag.Title = "Accounts";
}

<h2>Accounts</h2>

<p>
    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Create Account", "CreateAccount", new { id = ViewBag.id }, new { @class = "btn btn-default" })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isLocked)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
                <th>@Html.DisplayFor(modelItem => item.isLocked)</th>
                <td>
                    @Html.ActionLink("Deposit", "Deposit", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Withdraw", "Withdraw", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Lock Withdraw", "Lock", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Transaction", "Transaction", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("History", "History", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
